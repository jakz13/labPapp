<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.2">
    <persistence-unit name="LAB_PA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>logica.Aerolinea</class>
        <class>logica.Categoria</class>
        <class>logica.Ciudad</class>
        <class>logica.Cliente</class>
        <class>logica.CompraPaqLogica</class>
        <class>logica.ItemPaquete</class>
        <class>logica.ManejadorAerolinea</class>
        <class>logica.ManejadorCategoria</class>
        <class>logica.ManejadorCiudad</class>
        <class>logica.ManejadorCliente</class>
        <class>logica.ManejadorPaquete</class>
        <class>logica.ManejadorVuelo</class>
        <class>logica.ManejadorRutaVuelo</class>
        <class>logica.Paquete</class>
        <class>logica.Pasajero</class>
        <class>logica.Reserva</class>
        <class>logica.RutaVuelo</class>
        <class>logica.Usuario</class>
        <class>logica.Vuelo</class>


        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/LAB_PA"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="1234"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>

