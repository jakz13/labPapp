<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="LAB_PA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>logica.Aerolinea</class>
        <class>logica.Categoria</class>
        <class>logica.Ciudad</class>
        <class>logica.Cliente</class>
        <class>logica.CompraPaqLogica</class>
        <class>logica.ItemPaquete</class>
        <!-- REMOVER las clases Manejador* - NO son entidades -->
        <class>logica.Paquete</class>
        <class>logica.Pasajero</class>
        <class>logica.Reserva</class>
        <class>logica.RutaVuelo</class>
        <class>logica.Usuario</class>
        <class>logica.Vuelo</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/LAB_PA"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="true"/>

        </properties>
    </persistence-unit>
</persistence>